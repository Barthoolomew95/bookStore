<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property 
            name="numberOfBooksToDisplay" 
            type="String"
            label='How many Books display?'
            description="a amount of books to display"
            default="5"/>
            <property 
            name="headerText" 
            type="String"
            label='Type header text'
            description="header text"
            default="Recent Added Books"/>
        
            <property 
            name="isReversed" 
            type="Boolean"
            label='Reverse it?'
            description="changing image place from left to right"
            default='false'/>
            <property 
            name="whatBooks" 
            type="String"
            label='books to dispaly'
            description="available: recentBooks,bestsellers"
            default='recentBooks'/>
            <property 
            name="intervalTime" 
            type="Integer"
            label='interval time'
            description="time between item of carousel is changed in miliseconds"
            default='5000'/>
        
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>